<li><h3>{{story.headline}}</h3> author: {{story.author}}
  {{#if isImageShowing}}
    <p><img src={{story.image}} alt={{story.headline}}></p>
  {{else}}
    <button {{action 'imageShow'}}>Show image</button>
  {{/if}}
  {{update-story story=story update="update"}}
  <button {{action 'delete' story}}>Delete</button>
  <br>
</li>
