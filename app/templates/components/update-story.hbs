{{#if updateStoryForm}}
  <h4>Update {{story.headline}}'s content</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="headline">Headline</label>
        {{input value=headline id="headline" placeholder=story.headline}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" placeholder=story.author}}
      </div>

      <div class="form-group">
        <label for="body">Body</label>
        {{input value=body id="body" placeholder=story.body}}
      </div>

      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image id="image" placeholder=story.image}}
      </div>

      <button {{action 'update' story}}>Save</button>
    </form>
  </div>
  {{else}}
    <button {{action 'updateStoryForm'}}>Update</button>
{{/if}}
